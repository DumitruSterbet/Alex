@model Alex.Models.Country
@{
    ViewData["Title"] = "Adauga";
}


<div class="login-form-1">
    <form id="login-form" class="text-left" novalidate="novalidate" asp-action="add" asp-controller="country">
        <div class="main-login-form">
            <div class="login-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Denumirea tarii</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cod" class="control-label">Codul tarii</label>
                    <input type="text" asp-for="Cod" class="form-control" />
                </div>
               
                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>

            </div></div>
    </form>
 </div>