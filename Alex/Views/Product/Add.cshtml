@model Alex.Models.Product
@{
    ViewData["Title"] = "Adauga";
}


<div class="login-form-1">
    <form id="login-form" class="text-left" novalidate="novalidate" asp-action="add" asp-controller="product">
        <div class="main-login-form">
            <div class="login-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Denumirea produsului</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Pretul produsului</label>
                    <input type="number" asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Cantitatea de produse</label>
                    <input type="number" asp-for="Quantity" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CountryId">Alege tara producator:</label>
                    <select asp-for="CountryId">
                        @{ foreach (var el in ViewBag.Name)
                            {
                        <option value="@el.Id">@el.Name</option>
                       
                        }
                        }
                    </select>
                </div>

                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>

            </div>
        </div>
    </form>
</div>